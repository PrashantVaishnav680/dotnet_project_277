@model EventRegSystem.Models.EventRegistration
@{
    ViewData["Title"] = "Registration Details";
}
<h2>Registration Details</h2>

<div class="card p-3">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Event:</strong> @Model.EventName</p>
    <p><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
</div>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
