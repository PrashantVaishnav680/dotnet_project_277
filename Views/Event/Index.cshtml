@model IEnumerable<EventRegSystem.Models.EventRegistration>
@{
    ViewData["Title"] = "All Registrations";
}
<h2 class="text-center my-3">Event Registrations</h2>

<p><a class="btn btn-primary" href="/Event/Create">+ New Registration</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th><th>Email</th><th>Phone</th><th>Event</th><th>Date</th><th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.Email</td>
                <td>@r.Phone</td>
                <td>@r.EventName</td>
                <td>@r.EventDate.ToShortDateString()</td>
                <td>
                    <a href="/Event/Details/@r.Id" class="btn btn-info btn-sm">View</a>
                    <a href="/Event/Edit/@r.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Event/Delete/@r.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
